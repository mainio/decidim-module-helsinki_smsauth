<div class="content">
  <div class="wrapper">
    <div class="row">
      <div class="columns large-10 large-centered text-center page-title margin-top-1">
        <h1><%= t(".authenticate") %></h1>
        <p><%= t(".enter_access_code") %></p>
      </div>
    </div>
    <div class="row">
      <div class="columns medium-10 mediumlarge-8 large-6 medium-centered">
        <div class="card">
          <div class="card__content">
            <%= decidim_form_for(@form, url: users_auth_sms_access_code_validation_path, method: :post) do |form| %>
              <div class="row">
                <div class="columns large-centered">
                  <%= form.text_field :access_code, autocomplete: "off", value: nil %>
                </div>
              </div>
              <div class="row">
                <div class="columns large-centered">
                  <%= form.submit t(".submit"), class:"button expanded" %>
                </div>
              </div>
            <% end %>

            <p class="text-center">
              <%= link_to t(".return_to_sms_login"),  users_auth_sms_path %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
