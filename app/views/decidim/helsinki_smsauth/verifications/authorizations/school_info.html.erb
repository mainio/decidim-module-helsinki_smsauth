<% add_decidim_page_title(t(".omastadi")) %>

<div class="wrapper">
  <div class="row collapse">
    <div class="row">
      <div class="columns large-6 medium-10 medium-centered">
        <h2><%= t(".enter_your_information")%></h2>
        <%= decidim_form_for(@form, url: school_validation_authorization_path, method: :post) do |f| %>
          <div class="card">
            <div class="card__content">
              <p><%= form_required_explanation %>

              <div class="user-person">
                <div class="field">
                  <%= f.select :school, school_options, { id: "school", include_blank: true } %>
                </div>
              </div>
              <div class="field grade-info">
                <%= f.number_field :grade, help_text: t(".grade_help"), autocomplete: "off" %>
              </div>
            </div>
          </div>
          <div class="card">
            <div class="card__content">
              <div class="actions">
                <%= f.submit t(".submit"), class: "button expanded" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
