<div class="content">
  <div class="wrapper">
    <div class="row">
      <div class="columns large-10 large-centered text-center page-title margin-top-1">
        <h1><%= t(".verify") %></h1>
      </div>
    </div>
    <div class="row">
      <div class="columns medium-10 mediumlarge-8 large-6 medium-centered">
        <div class="card">
          <div class="card__content">
            <%= decidim_form_for(@form, url: authorization_path(redirect_url: redirect_url), method: :put) do |form| %>
              <div class="row">
                <div class="columns large-centered">
                  <%= render partial: "decidim/helsinki_smsauth/omniauth/development_hint" if Rails.env.development? %>
                  <%= form.text_field :verification_code, autocomplete: "off" %>
                </div>
              </div>
              <div class="row">
                <div class="columns large-centered">
                  <%= form.submit t(".submit"), class:"button expanded" %>
                </div>
              </div>
            <% end %>

            <div class="field">
              <p class="text-center">
                <%= link_to t(".not_receive"), resend_code_authorization_path %>
              </p>
              <div class="field">
                <p class="text-center">
                  <%= link_to t(".destroy"), authorization_path, method: :delete, data: { confirm: t(".confirm_destroy") } %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
